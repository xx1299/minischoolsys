<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.s1mple.minischoolsys.dao.AdminMapper">
    <resultMap id="adminVo" type="com.s1mple.minischoolsys.domain.vo.AdminVo">
        <collection property="roles" column="admin_id" javaType="java.util.ArrayList"
                    ofType="com.s1mple.minischoolsys.domain.vo.RoleVo" select="com.s1mple.minischoolsys.dao.RoleMapper.selectRoleVoByAid">
        </collection>
    </resultMap>

    <select id="selectAdminVoByAid" resultMap="adminVo">
        select admin_id,username,password,avatar,status,create_time,last_login_time
        from admin a
        where admin_id = #{admin_id}
    </select>
</mapper>